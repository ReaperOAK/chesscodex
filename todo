```javascript
// FILE: src/pages/kca/About.js
// ACTION: Redesigned component for the new "Synthwave" theme. Updated to use semi-transparent cards and high-contrast text on the new background image.

import React from 'react';
import SEO from '../../components/SEO';
import { FaChessKing, FaTrophy, FaQuoteLeft } from 'react-icons/fa';
import WhyChooseUs from '../../components/WhyChooseUs';
import Team from '../../components/Team';

const About = () => {
  const siteName = 'Kolkata Chess Academy';

  // --- KCA "Synthwave" Theme Classes ---
  const heroSectionClasses = "bg-black/20 backdrop-blur-sm py-24";
  const sectionWrapperClasses = "py-16 sm:py-20";
  const mainCardClasses = "bg-slate-900/70 backdrop-blur-md border border-cyan-500/20 p-8 rounded-lg shadow-lg";
  const missionVisionCardClasses = "bg-slate-900/60 backdrop-blur-md border border-pink-500/20 p-8 rounded-lg shadow-md hover:shadow-pink-500/20 hover:border-pink-500/40 transition-all duration-300";
