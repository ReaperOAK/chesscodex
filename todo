  const textClasses = "text-slate-200";
  const iconClasses = "text-pink-500";
  const missionTitleClasses = "text-cyan-400";
  const missionHighlightClasses = "text-pink-500";

  return (
    <div>
      <SEO
        title={`About Us - ${siteName}`}
